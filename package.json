{
  "name": "penny-bus-project",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dist:create": "./create-dist.sh",
    "deploy:prod": "npm run dist:create prod && npm run sync:static:prod && cd .dist && npm run sls:deploy:prod && cd ../ && npm run flush:prod",
    "deploy:dev": "npm run dist:create dev && npm run sync:static:dev && cd .dist && npm run sls:deploy:dev && cd ../ && npm run flush:dev",
    "sls:deploy:prod": "sls deploy --stage prod --verbose",
    "sls:deploy:dev": "sls deploy --stage dev --verbose",
    "sync:static:prod": "aws s3 sync .next/static s3://prod-bus-website/_next/static/",
    "sync:static:dev": "aws s3 sync .next/static s3://dev-bus-website/_next/static/",
    "sync:db:prod": "aws s3 sync db/blog-articles s3://prod-bus-website/db/blog-articles/",
    "sync:db:dev": "aws s3 sync db/blog-articles s3://dev-bus-website/db/blog-articles/",
    "deploy:backend:prod": "cd bus-backend && sls deploy --stage prod",
    "deploy:backend:dev": "cd bus-backend && sls deploy --stage dev",
    "deploy:table:prod": "cd db && sls deploy --stage prod",
    "deploy:table:dev": "cd db && sls deploy --stage dev",
    "flush:prod": "aws cloudfront create-invalidation --distribution-id ECRPR20932SE2 --paths \"/*\"",
    "flush:dev": "aws cloudfront create-invalidation --distribution-id E3MVE0FQT5FY6M --paths \"/*\""
  },
  "dependencies": {
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "aws-lambda": "^1.0.7",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7",
    "serverless-esbuild": "^1.45.1",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^12.0.4",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.379.1",
    "@types/aws-lambda": "^8.10.119",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
}
